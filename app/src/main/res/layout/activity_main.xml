<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/tvNombre"
        android:layout_width="283dp"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="41dp"
        android:hint="Escribe el nombre del alumno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"  />


    <EditText
        android:id="@+id/tvApellidos"
        android:layout_width="283dp"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="41dp"
        android:hint="Escribe el apellido del alumno"
        app:layout_constraintStart_toStartOf="@id/tvNombre"
        app:layout_constraintTop_toTopOf="@id/tvNombre"/>


    <EditText
        android:id="@+id/tvCurso"
        android:layout_width="283dp"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="80dp"
        android:hint="Escribe el curso del alumno"
        app:layout_constraintStart_toStartOf="@id/tvNombre"
        app:layout_constraintTop_toTopOf="@id/tvNombre"/>


    <Button
        android:id="@+id/bAnadir"
        android:layout_width="117dp"
        android:layout_height="52dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="145dp"
        android:text="AÃ±adir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>